<div class="page-container">

  <% if flash.any? %>
    <% flash.each do |type, msg| %>
      <p class="error-msg"><%= msg %></p>
    <% end %>
  <% end %>

  <h3 class="small-title centered">Surveys</h3>

  <% if @surveys.any? %>
    <% @surveys.each do |survey| %>
      <div class="list-card">
        <p>
          <span class="bold">Survey Name:</span>
          <span><%= survey["name"] %></span>
        </p>

        <% if survey["visible"] == false %>
          <%= button_to "Show", survey_show_organization_event_survey_path(id: survey["id"]), method: :patch, params: { organization_id: @organization_id, event_id: survey["event_id"], id: survey["id"] }, class: "blue button full-width" %>
        <% elsif survey["visible"] == true %>
          <%= button_to "Hide", survey_hide_organization_event_survey_path(id: survey["id"]), method: :patch, params: { organization_id: @organization_id, event_id: survey["event_id"], id: survey["id"] }, class: "green button full-width" %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>There are no surveys yet.</p>
  <% end %>

  <h3 class="small-title centered">Session Feedback Surveys</h3>

  <% if @session_feedback_surveys.any? %>
    <% @session_feedback_surveys.each do |survey| %>
      <div class="list-card">
        <p>
          <span class="bold">Survey Name:</span>
          <span><%= survey["name"] %></span>
        </p>

        <% if survey["visible"] == false %>
          <%= button_to "Show", survey_show_organization_event_survey_path(id: survey["id"]), method: :patch, params: { organization_id: @organization_id, event_id: survey["event_id"], id: survey["id"] }, class: "blue button full-width" %>
        <% elsif survey["visible"] == true %>
          <%= button_to "Hide", survey_hide_organization_event_survey_path(id: survey["id"]), method: :patch, params: { organization_id: @organization_id, event_id: survey["event_id"], id: survey["id"] }, class: "green button full-width" %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>There are no session feedback surveys yet.</p>
  <% end %>
</div>
