<%= render 'events/nav', {organization_id: @organization_id, id: @event_id} %>

<div class="page-container">

  <h3 class="small-title">Send Announcement</h3>

  <% if flash.any? %>
    <% flash.each do |type, msg| %>
      <p class="error-msg"><%= msg %></p>
    <% end %>
  <% end %>

  <%= form_tag(organization_event_alerts_path, method: "post") do %>
    <div class="form-field">
      <%= label_tag(:title, "Subject", class: "form-label") %>
      <%= text_field_tag(:title, nil, class: "form-input") %>
    </div>

    <div class="form-field">
      <%= label_tag(:content, "Message", class: "form-label") %>
      <%= text_area_tag(:content, nil, class: "form-input") %>
    </div>

    <h3 class="small-title">Schedule</h3>

    <div class="form-field">
      <%= check_box_tag(:scheduled, true) %>
      <%= label_tag(:scheduled, "Schedule Announcement") %>
    </div>

    <p>Data and Time to Send Announcement</p>

    <div class="form-field">
      <%= date_field(:date__scheduled_date, nil, class: "form-input inline ") %>

    <span class="between-inputs"> at </span>

      <%= time_field(:time__scheduled_date, nil, class: "form-input inline") %>
    </div>

    <h3 class="small-title">Options</h3>

    <div class="form-field">
      <%= check_box_tag(:send_as_email, true) %>
      <%= label_tag(:send_as_email, "Send Email") %>
    </div>

    <div class="">
      <%= submit_tag("Send Announcement", { class: "green button", data: { confirm: "You are about to send this announcement to all users of the event app. Are you sure you want to send this announcement?"}}) %>
    </div>
  <% end %>

</div>
